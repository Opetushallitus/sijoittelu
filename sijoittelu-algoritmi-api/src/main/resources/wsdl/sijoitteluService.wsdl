<?xml version='1.0' encoding='UTF-8'?>
<wsdl:definitions name="sijoitteluService"
                  targetNamespace="http://sijoittelu.service.sade.vm.fi/"
                  xmlns:ns1="http://sijoittelu.service.sade.vm.fi/types"
                  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
                  xmlns:tns="http://sijoittelu.service.sade.vm.fi/"
                  xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
                  xmlns:xsd="http://www.w3.org/2001/XMLSchema">
                  
    <wsdl:types>
        <xsd:schema targetNamespace="http://sijoittelu.service.sade.vm.fi/">
            <xsd:import namespace="http://sijoittelu.service.sade.vm.fi/types" schemaLocation="sijoitteluService.xsd" />
        </xsd:schema>
    </wsdl:types>

	<wsdl:message name="sijoittele">
		<wsdl:part element="ns1:sijoittele" name="parameters"/>
	</wsdl:message>
    <wsdl:message name="sijoitteluResult">
        <wsdl:part element="ns1:sijoittele" name="result" />
    </wsdl:message>

    <!-- TODO faultin määritys -->

    <wsdl:portType name="SijoitteluService">
        <wsdl:documentation>
            Palvelurajapinta, jolla voidaan suorittaa sijoitteluajo.
        </wsdl:documentation>
        <wsdl:operation name="sijoittele">
            <wsdl:documentation>
             	Suorittaa sijoitteluajon haulle. Sijoittelu tehdään vain syötetyille hakukohteille ja niiden sijoiteltavissa oleville valintatapajonoille.
            </wsdl:documentation>
            <wsdl:input message="tns:sijoittele" name="sijoittele" />
            <wsdl:output message="tns:sijoitteluResult" name="sijoitteluResult" />
            <!-- TODO fault? -->

        </wsdl:operation>
    </wsdl:portType>

	<wsdl:binding name="SijoitteluServiceSoapBinding" type="tns:SijoitteluService">
		<soap:binding style="document"
			transport="http://schemas.xmlsoap.org/soap/http" />
		<wsdl:operation name="sijoittele">
			<soap:operation soapAction="" style="document" />
			<wsdl:input name="sijoittele">
				<soap:body use="literal" />
			</wsdl:input>
            <wsdl:output>
                <soap:body use="literal" />
            </wsdl:output>
		</wsdl:operation>
	</wsdl:binding>

    <wsdl:service name="SijoitteluService">
        <wsdl:port name="SijoitteluServicePort" binding="tns:SijoitteluServiceSoapBinding">
            <soap:address location="http://localhost:8181/cxf/sijoitteluService" />
        </wsdl:port>
    </wsdl:service>

</wsdl:definitions>