    <bean id="callback" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.apache.cxf.jaxrs.client.WebClient" />
    </bean>

    <spring:camelContext id="sijoitteluAlgContext" xmlns="http://camel.apache.org/schema/spring">
        <spring:contextScan/>
