    <mockito:mock id="virkailijaValintaTulosServiceResource" class="fi.vm.sade.sijoittelu.laskenta.external.resource.VirkailijaValintaTulosServiceResource" />
    <mockito:mock id="sijoitteluValintaTulosServiceResource" class="fi.vm.sade.sijoittelu.laskenta.external.resource.SijoitteluValintaTulosServiceResource" />
    <mockito:mock id="authorizer" class="fi.vm.sade.javautils.opintopolku_spring_security.Authorizer" />
