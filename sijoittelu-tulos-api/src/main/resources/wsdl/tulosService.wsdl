            </wsdl:input>
            <wsdl:output>
                <soap:body use="literal" />
            </wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name="TulosService">
        <wsdl:port name="TulosServicePort" binding="tns:TulosServiceSoapBinding">
            <soap:address location="http://localhost:8181/cxf/tulosService" />
        </wsdl:port>
