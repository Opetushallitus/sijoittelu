    <name>Sijoittelu :: Tulos :: Service</name>

    <parent>
        <groupId>fi.vm.sade.sijoittelu</groupId>
        <artifactId>sijoittelu</artifactId>
        <version>5.0.1</version>
    </parent>

    <dependencies>
