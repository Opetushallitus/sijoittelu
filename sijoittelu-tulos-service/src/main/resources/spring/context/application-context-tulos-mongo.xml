<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
    ">

    <context:annotation-config />

    <!-- Database -->
    <beans profile="default,test">
        <bean id="mongoUri" class="com.mongodb.MongoClientURI">
            <constructor-arg type="java.lang.String" value="${sijoittelu-service.mongodb.uri}" />
        </bean>

        <bean id="mongo" class="com.mongodb.MongoClient" scope="singleton">
            <constructor-arg type="com.mongodb.MongoClientURI" ref="mongoUri"/>
        </bean>
    </beans>
    <beans profile="it">
        <bean id="mongodFactory" class="de.flapdoodle.embed.mongo.tests.MongodForTestsFactory" destroy-method="shutdown"/>
        <bean id="mongo" class="com.mongodb.MongoClient" factory-bean="mongodFactory" factory-method="newMongo"/>
    </beans>
    <beans>
        <bean id="morphia" class="org.mongodb.morphia.Morphia" />
        <bean id="datastore" factory-bean="morphia" factory-method="createDatastore">
            <constructor-arg type="com.mongodb.MongoClient" ref="mongo" />
            <constructor-arg type="java.lang.String" value="${sijoittelu-service.mongodb.dbname}" />
        </bean>
    </beans>
</beans>